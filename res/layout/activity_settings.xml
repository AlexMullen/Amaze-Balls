<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <ToggleButton
        android:id="@+id/togglebutton_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="61dp"
        android:checked="true"
        android:onClick="onMusicToggle"
        android:text="@string/tgl1_msg" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/togglebutton_music"
        android:layout_alignBottom="@+id/togglebutton_music"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="57dp"
        android:text="@string/tgl1_msg"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/yTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/togglebutton_weather"
        android:layout_alignBottom="@+id/togglebutton_weather"
        android:layout_alignLeft="@+id/textView1"
        android:text="@string/tgl2_msg"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/togglebutton_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/togglebutton_music"
        android:layout_below="@+id/togglebutton_music"
        android:layout_marginTop="47dp"
        android:checked="true"
        android:text="@string/tgl2_msg"
        android:onClick="onWeatherToggle" />

</RelativeLayout>
