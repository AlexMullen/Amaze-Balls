<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.tees.amazeballs"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ball"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.ac.tees.amazeballs.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenNoBackgroundTheme" >
        </activity>
        <activity
            android:name="uk.ac.tees.amazeballs.EditorActivity"
            android:label="@string/title_activity_maze_editor"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name="uk.ac.tees.amazeballs.menus.LevelSelect" >
        </activity>
        <activity android:name="uk.ac.tees.amazeballs.menus.Highscores" >
        </activity>
        <activity android:name="uk.ac.tees.amazeballs.menus.Settings" >
        </activity>
        <activity android:name="uk.ac.tees.amazeballs.menus.MainMenuActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>